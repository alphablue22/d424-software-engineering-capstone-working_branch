<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.VacationDetails">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:background="#03A9F4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title:"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/titletext"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Vacation Title"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hotel:"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/hoteltext"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Hotel Name"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start Date:"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/startDateField"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Enter Start Date"
                android:focusable="false"
                android:clickable="true"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="End Date:"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/endDateField"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Enter End Date"
                android:focusable="false"
                android:clickable="true"
                android:textSize="14sp" />

            <CheckBox
                android:id="@+id/alertVacationCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set Alert"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/emptyPlaceholderView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="No excursions available for this vacation."
                android:visibility="gone"
                android:textSize="16sp" />

        </LinearLayout>
    </ScrollView>
    <TextView
        android:id="@+id/excursionsHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Excursions associated with vacation:"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/scrollView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/excursionreceylerview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/excursionsHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/buttonsLinearLayout"

        />

    <LinearLayout
        android:id="@+id/buttonsLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">



        <Button
            android:id="@+id/addExcursionButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Add Excursion" />

        <Button
            android:id="@+id/addVacationButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Add Vacation" />

        <Button
            android:id="@+id/shareVacationButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Share Vacation" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>